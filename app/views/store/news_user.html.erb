<h1>News</h1>
		<table>
			<% @news.each do |news| %>
				<tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
					<td>
					<%= image_tag(news.image.url, class: 'list_image', size:'100x140') %>
    			 </td>
					<td class="list_description">
					<dl>
					<h3><%= link_to news.title%></h3> 
					<dd><%= truncate(strip_tags(news.content),length: 50) %></dd>
					<%= link_to 'Read More', show_news_path(news_id: news)%>
					</dl>
					</td>
					<td class="list_actions">
					<br>
					</td>
				</tr>
		<% end %>
		</table>